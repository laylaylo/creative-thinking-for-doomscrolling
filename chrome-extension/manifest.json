{
  "manifest_version": 3,
  "name": "Focus Master Pro",
  "version": "3.0",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": { "page": "options.html", "open_in_tab": true },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": [
        "prompts/drawing.js",
        "prompts/math.js",
        "prompts/philosophy.js",
        "prompts/tictactoe.js",
        "prompts/reminders.js",
        "prompts/nature.js",
        "prompts/timedActivity.js",
        "prompts/twoChoice.js",
        "prompts/health.js",
        "utils/ui.js",
        "utils/timer.js",
        "utils/diary.js",
        "main.js"
      ],
      "web_accessible_resources": [
        {
          "resources": ["zen.html", "assets/*"],
          "matches": ["<all_urls>"]
        }
      ]
    }
  ]
}