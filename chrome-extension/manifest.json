{
  "manifest_version": 3,
  "name": "Focus Master Pro",
  "version": "3.0",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "options_ui": { "page": "options.html", "open_in_tab": true },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": [
        "prompts/math.js",
        "prompts/philosophy.js",
        "prompts/tictactoe.js",
        "utils/ui.js",
        "utils/timer.js",
        "main.js"
      ]
    }
  ]
}